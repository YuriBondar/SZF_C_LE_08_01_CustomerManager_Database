<Window x:Class="SZF_C_LE_08_01_CustomerManager_Database.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SZF_C_LE_08_01_CustomerManager_Database.Views"
        mc:Ignorable="d"
        Title="AuthorizationWindow" 
        Height="320" Width="340"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="125*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="1"
               Content="Login" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Width="240" Height="26"/>

        <TextBox Grid.Row="2" 
                 Name="InputLoginTextBox"
                 Text="{Binding LoginInput}" 
                 HorizontalAlignment="Center" VerticalAlignment="Center" 
                 Width="240" Height="18"/>


        <Label Grid.Row="3"
               Content="Password" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Width="240" Height="26"/>

        <PasswordBox Grid.Row="4"
                     PasswordChanged="PasswordBox_PasswordChanged"
                     HorizontalAlignment="Center"  VerticalAlignment="Center" 
                     Width="240" Height="18"/>


        <Grid Grid.Row="5"  Height="120">


            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Button Grid.Row="0" 
                    Content="Öffnen"
                    Command="{Binding CheckAuthorizationCommand}"
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Height="27" Width="110"/>

            <Button Grid.Row="1" 
                    Content="Registrierung"
                    Click="RunRegistrationWindow_Click"
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Height="27" Width="110"/>

            <Button Grid.Row="2" 
                    Content="Beenden"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Height="27" Width="110"/>
        </Grid>

    </Grid>
</Window>
